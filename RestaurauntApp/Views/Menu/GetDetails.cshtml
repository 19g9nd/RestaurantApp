@{
    ViewData["Title"] = "Details";
    Layout = null;
}
@model MenuItem
<!DOCTYPE html>
<html>

<head>
    <title>@ViewData["Title"]</title>
    <style>
        img {
            max-height: 150px;
            margin-right: 20px;
            border-radius: 10px;
        }

        .details-container {
            margin-top: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: #f9f9f9;
        }

        .details-container h2 {
            margin-bottom: 10px;
        }

        .details-container p {
            margin-bottom: 5px;
        }

        .button-56 {
            align-items: center;
            background-color: #50C5B7;
            border: 2px solid #111;
            border-radius: 8px;
            box-sizing: border-box;
            color: #111;
            cursor: pointer;
            display: flex;
            font-size: 16px;
            height: 48px;
            justify-content: center;
            line-height: 24px;
            max-width: 100%;
            padding: 0 25px;
            position: relative;
            text-align: center;
            text-decoration: none;
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
        }

        .button-56:after {
            background-color: #111;
            border-radius: 8px;
            content: "";
            display: block;
            height: 48px;
            left: 0;
            width: 100%;
            position: absolute;
            top: -2px;
            transform: translate(8px, 8px);
            transition: transform .2s ease-out;
            z-index: -1;
        }

        .button-56:hover:after {
            transform: translate(0, 0);
        }

        .button-56:active {
            background-color: #46a58a;
            outline: 0;
        }

        .button-56:hover {
            outline: 0;
        }

        @@media (min-width: 768px) {
            .button-56 {
                padding: 0 40px;
            }
        }
    </style>
</head>

<body>
    <div class="details-container">
        <img src="@Url.Content(@Model.ImageURL)" alt="@Model.Name" />
        <h2>@Model.Name</h2>
        <p>@Model.Description</p>
        <p>Price: $@Model.Price</p>
        <p>Category: @Model.Category</p>
        <p><strong>Is Vegetarian:</strong> @(Model.IsVegetarian ? "Yes" : "No")</p>
        @if (User?.Identity?.IsAuthenticated == true) {
        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" value="1" min="1" class="price-tag" />
        <button class="button-56" onclick="addToCart(@Model.Id,'@Model.Name',@Model.Price)">Add to Cart</button>
        }
        <div id="addedMessage" style="color: green;"></div>
    </div>

</body>

</html>
